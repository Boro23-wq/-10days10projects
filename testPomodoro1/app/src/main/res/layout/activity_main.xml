<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1F1C2C"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ring"
        android:layout_width="261dp"
        android:layout_height="296dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:src="@drawable/circle" />

    <ToggleButton
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="193dp"
        android:text="start"
        android:textColor="#fff"
        android:background="@drawable/gradient_buttons"
        android:visibility="visible"
        android:textOff="@string/start" />

    <ToggleButton
        android:id="@+id/StartBreak"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="444dp"
        android:background="@drawable/gradient_buttons"
        android:textColor="#fff"
        android:text="Start Break"
        android:textOff="@string/startBreak"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_reset"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-89dp"
        android:background="@drawable/gradient_buttons1"
        android:layout_marginLeft="-89dp"
        android:layout_marginTop="251dp"
        android:layout_toEndOf="@+id/button_start_pause"
        android:layout_toRightOf="@+id/button_start_pause"
        android:text="reset"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/BreakTimer"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:layout_centerInParent="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="-88dp"
        android:background="@drawable/gradient_buttons1"
        android:layout_marginRight="-88dp"
        android:layout_toStartOf="@+id/button_start_pause"
        android:layout_toLeftOf="@+id/button_start_pause"
        android:text="Break"
        tools:ignore="ExtraText" />

    <TextView
        android:id="@+id/session"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@+id/button_start_pause"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginBottom="-6dp"
        android:paddingLeft="10dp"
        android:text="4 sessions left until big break!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/ShareButton"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="377dp"
        android:layout_marginLeft="377dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        app:srcCompat="@drawable/share" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="113dp"
        android:visibility="visible"
        app:srcCompat="@drawable/fb" />

    <ImageView
        android:id="@+id/mail"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="60dp"
        app:srcCompat="@drawable/mail" />

    <ImageView
        android:id="@+id/ig"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="168dp"
        app:srcCompat="@drawable/ig" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="169dp"
        android:fontFamily="@font/gil_bold"
        android:text="@string/textViewText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/popUp"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:onClick="showPopUp"
        app:srcCompat="@drawable/info" />


    <Button
        android:id="@+id/buttonShowCustomDialog"
        style="@android:style/Widget.DeviceDefault.Button.Colored"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="212dp"
        android:drawableRight="@drawable/padlock_1"
        android:paddingLeft="9dp"
        android:drawablePadding="0dp"
        android:background="@drawable/gradient"
        android:paddingRight="15dp"
        android:paddingBottom="3dp"
        android:text="FOCUS" />

    <TextView
        android:id="@+id/sessionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:text="Work Session"
        android:fontFamily="@font/gil_bold"
        android:textColor="#fff"
        android:textSize="43sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="173dp"
        android:layout_marginTop="805dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/gil_bold"
        android:text=" @Boro"
        android:textColor="#fff" />


</RelativeLayout>